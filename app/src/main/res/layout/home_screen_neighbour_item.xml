<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="@dimen/_15sdp"
    android:paddingLeft="@dimen/_15sdp">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:text="name"
       />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:textSize="@dimen/_12sdp"
        android:text="nagative"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_baseline_sentiment_very_satisfied_24"
        android:drawableLeft="@drawable/ic_baseline_sentiment_very_satisfied_24"
        android:drawableTint="@android:color/holo_green_dark"
        android:drawablePadding="@dimen/_5sdp"
        />

</LinearLayout>